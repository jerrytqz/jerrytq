{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react-jsx",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "outDir": "./dist",
    "noImplicitAny": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./dist/**/*"
  ]
}
